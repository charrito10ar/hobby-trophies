<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/image_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar"/>
        <FrameLayout
            android:id="@+id/ic_player_admin"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/image_player"
            android:layout_alignRight="@+id/image_player"
            android:background="@drawable/background_player_admin"/>
    </RelativeLayout>

    <com.marbit.hobbytrophies.overwrite.TextViewPlus
        android:id="@+id/text_view_name_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="pablocebo"
        foo:customFont="BrandonText-Light.otf"/>

</LinearLayout>